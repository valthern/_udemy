@page "/usuarios"
@inject RepositorioUsuarios repositorio
@inject SweetAlertService swal

<h3>Índice Usuarios</h3>

<Paginacion PaginaActual="paginaActual" PaginasTotales="paginasTotales" PaginaSeleccionada="PaginaSeleccionada"></Paginacion>

<ListadoGenerico Listado="Usuarios">
    <HayRegistrosCompleto>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Usuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Usuarios!)
                {
                    <tr>
                        <td>
                            <a href="/usuarios/editar/@usuario.Id" class="btn btn-success">Editar</a>
                        </td>
                        <td>@usuario.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </HayRegistrosCompleto>
</ListadoGenerico>

@code {
    List<UsuarioDTO>? Usuarios;
    private int paginaActual = 1;
    private int paginasTotales;

    protected override async Task OnInitializedAsync() => await Cargar();

    private async Task PaginaSeleccionada(int pagina)
    {
        paginaActual = pagina;
        await Cargar(pagina);
    }

    private async Task Cargar(int pagina = 1)
    {
        var respuestaPaginada = await repositorio.Get(new DTOs.PaginacionDTO { Pagina = pagina });
        paginasTotales = respuestaPaginada.TotalPaginas;
        Usuarios = respuestaPaginada.Registros;
    }
}
